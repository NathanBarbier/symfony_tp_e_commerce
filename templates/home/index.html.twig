{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
    <div id="add_modal">
        <div id='modal_close' onclick='closeModal()'>
            <p>{{ 'modal.ajout.fermer'| trans }}</p>
        </div>
        <div id="form_container">
            {% if form is not null %}
                {{ form_start(form) }}
                    <div class="form-group p-3">
                        <div class="row mt-3">
                            <div class="col">
                                {{ form_row(form.nom, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col">
                                {{ form_row(form.prix, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col">
                                {{ form_row(form.stock, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col">
                                {{ form_row(form.description, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col">
                                {{ form_row(form.photo, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col">
                                {{ form_row(form.categories, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col">
                                {{ form_row(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
                            </div>
                        </div>
                    </div>
                {{ form_end(form) }}
            {% endif %}
        </div>
    </div>
    <section id="head_home">
        <div id="head_desc">
           <p id='head_title_1'>New product</p>
            <p id='head_title_2'>XX99 Mark II Headphones</p>
            <p id='head_title_3'>Experience natural, lifelike audio and exceptional build quality made for the passionate music enthusiast.</p>
            <a class="h_article_btn" href="#"></a>   {# TODO href #}
        </div>
    </section>
    
    <article>
        <div id="alt_articles_home">
            <div class="alt_container">
                <img class="alt_img" src="{{ asset('img/product-xx99-mark-one-headphones/image-product-removebg-preview-removebg-preview(1).png') }}" alt="headphone audio audiophile">
                <p class="alt_title">Headphones</p>
                <a class="alt_link" href="#">SHOP <span class="alt_span">></span></a>
                <div class="box-shadow"></div>
            </div>

            <div class="alt_container">
                <img class="alt_img" src="{{ asset('img/product-zx9-speaker/image-product-wbg.png') }}" alt="speaker audiophile">
                <p class="alt_title">speaker</p>
                <a class="alt_link" href="#">SHOP <span class="alt_span">></span></a>
                <div class="box-shadow"></div>
            </div>

            <div class="alt_container">
                <img class="alt_img" src="{{ asset('img/product-yx1-earphones/image-product-removebg-preview-removebg-preview(2).png') }}" alt="earphone audiophile">
                <p class="alt_title">earphones</p>
                <a class="alt_link" href="#">SHOP <span class="alt_span">></span></a>
                <div class="box-shadow"></div>
            </div>
        </div>

        <section class="home_section nts1">
            <img src="{{ asset('img/desktop_home/image-speaker-zx9.png') }}" alt="">
            <div class="circle first"></div>
            <div class="circle second"></div>
            <div class="circle third"></div>

            <div class="article_desc">
                <h2 class='article_title'>ZX9 speaker</h2>
                <p class="article_text">Upgrade to premium speakers that are phenomenally built to deliver truly remarkable sound.</p>
                <a class="article_btn_ntsF" href="#"></a>
            </div>
        </section>
        
        <section class="home_section nts2">
            <p class='article_title'>ZX7 SPEAKER</p>
            <a class="article_btn_ntsS" href="#"></a>
        </section>

        
        <section class="home_section nts3">
            <div class="article_img">
            <img class ="nts3_img" src="{{ asset('img/desktop_home/image-earphones-yx1.jpg') }}">
            </div>
            <div class="title_container">
                <p class='article_title'>YX1 EARPHONES</p>
                <a class="article_btn_ntsS" href="#"></a>
            </div>
        </section>

        <div class="article">
            <div class="article_desc">
                <h2 class="article_title">Bringing you the <span id="span_best">best</span> audio gear</h2>
                <p class="article_text">Located at the heart of New York City, Audiophile is the premier store for high end headphones,
                    earphones, speakers, and audio accessories. We have a large showroom and luxury demonstration
                    rooms available for you to browse and experience a wide range of our products. Stop by our store
                    to meet some of the fantastic people who make Audiophile the best place to buy your portable
                    audio equipment.</p>
            </div>
            <img id="last_article" src="{{ asset('img/shared/image-best-gear.jpg') }}" alt="casque audio">
        </div>
        
    </article>
{% endblock %}
